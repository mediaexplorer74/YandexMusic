<Application
    x:Class="YandexMusicUWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YandexMusicUWP">

    <Application.Resources>
        <ResourceDictionary>
            <!-- Цвета Яндекс.Музыки -->
            <SolidColorBrush x:Key="YandexBrush" Color="#FFEA0F0F" />
            <SolidColorBrush x:Key="YandexDarkBrush" Color="#222222" />
            <SolidColorBrush x:Key="YandexLightGrayBrush" Color="#777777" />
            <SolidColorBrush x:Key="YandexGrayBrush" Color="#999999" />

            <!-- Стили для элементов управления -->
            <Style x:Key="YandexButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource YandexBrush}" />
                <Setter Property="Foreground" Value="{StaticResource YandexDarkBrush}" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="12,6" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>

            <Style x:Key="YandexTextBlockHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="Margin" Value="0,12,0,8" />
            </Style>

            <Style x:Key="YandexTextBlockSubHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="0,8,0,4" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>


</Application>
